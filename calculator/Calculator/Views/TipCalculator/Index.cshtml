@{
    ViewData["Title"] = "Calculadora de Propinas";
}

<h2>Calculadora de Propinas</h2>

<form asp-action="Calculate" method="post">
    <div>
        <label for="billAmount">Monto de la Cuenta:</label>
        <input type="number" step="0.01" id="billAmount" name="billAmount" required />
    </div>
    <div>
        <label for="tipPercentage">Porcentaje de Propina:</label>
        <input type="number" step="0.01" id="tipPercentage" name="tipPercentage" required />
    </div>
    <div>
        <button type="submit">Calcular</button>
    </div>
</form>
